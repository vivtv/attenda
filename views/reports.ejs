<% include layout %>
<div class="page-header">
    <div class="header-content">
        <div>
            <h1>
                <i class="fas fa-chart-bar"></i>
                Generated Reports
            </h1>
            <p>View and download attendance reports</p>
        </div>
        <div class="header-actions">
            <a href="/courses" class="btn btn-primary">
                <i class="fas fa-plus"></i>
                Take Attendance
            </a>
        </div>
    </div>
</div>

<% if (reports.length > 0) { %>
    <div class="reports-table">
        <table>
            <thead>
                <tr>
                    <th>Report Name</th>
                    <th>Generated</th>
                    <th>Size</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% reports.forEach(report => { %>
                    <tr>
                        <td>
                            <i class="fas fa-file-alt"></i>
                            <%= report.filename %>
                        </td>
                        <td><%= report.created.toLocaleDateString() %> <%= report.created.toLocaleTimeString() %></td>
                        <td><%= Math.round(report.size / 1024) %> KB</td>
                        <td>
                            <a href="/download-report/<%= report.filename %>" class="btn btn-sm btn-primary">
                                <i class="fas fa-download"></i>
                                Download
                            </a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
<% } else { %>
    <div class="empty-state">
        <i class="fas fa-file-alt"></i>
        <h3>No reports generated</h3>
        <p>Take attendance and generate reports to see them here.</p>
        <a href="/courses" class="btn btn-primary">
            <i class="fas fa-plus"></i>
            Take Attendance
        </a>
    </div>
<% } %>
